<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars = "vertical">

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="8dp"
                  android:layout_marginStart="10dp"
                  android:text="Send Money"
                  android:textColor="@color/black"
                  android:textStyle="bold">

              </TextView>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_margin="10dp"
                 android:orientation="vertical"
                 >

             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:orientation="horizontal"
                android:layout_weightSum ="4"
            >


                   <LinearLayout
                     android:layout_width="0dp"
                       android:layout_height="wrap_content"
                     android:layout_weight ="1"
                     android:orientation="vertical">


                    <ImageView
                     android:layout_width="40dp"
                        android:layout_height="40dp"

                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/bg_offer_home"
                        android:src="@drawable/ic_to_contact">

                     </ImageView>

                       <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_margin="5dp"
                         android:layout_gravity="center_horizontal"
                           android:textAlignment="center"
                         android:text="To Contact"
                         android:textColor="@color/black">

                       </TextView>

                  </LinearLayout>




                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight ="1"
                     android:orientation="vertical">


                     <ImageView
                         android:layout_width="40dp"
                         android:layout_height="40dp"

                         android:layout_margin="5dp"
                         android:padding="10dp"
                         android:layout_gravity="center_horizontal"
                         android:background="@drawable/bg_offer_home"
                         android:src="@drawable/ic_to_account">

                     </ImageView>

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_margin="5dp"
                         android:layout_gravity="center_horizontal"
                         android:textAlignment="center"
                         android:text="To Account"
                         android:textColor="@color/black">

                     </TextView>

                 </LinearLayout>


                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight ="1"
                     android:orientation="vertical">


                     <ImageView
                         android:layout_width="40dp"
                         android:layout_height="40dp"

                         android:layout_margin="5dp"
                         android:padding="10dp"
                         android:layout_gravity="center_horizontal"
                         android:background="@drawable/bg_offer_home"
                         android:src="@drawable/ic_to_self">

                     </ImageView>

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_margin="5dp"
                         android:layout_gravity="center_horizontal"
                         android:textAlignment="center"
                         android:text="To Self"
                         android:textColor="@color/black">

                     </TextView>


                 </LinearLayout>






                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight ="1"
                     android:orientation="vertical">


                     <ImageView
                         android:layout_width="40dp"
                         android:layout_height="40dp"

                         android:layout_margin="5dp"
                         android:padding="10dp"
                         android:layout_gravity="center_horizontal"
                         android:background="@drawable/bg_offer_home"
                         android:src="@drawable/ic_split_bill">

                     </ImageView>

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_margin="5dp"
                         android:layout_gravity="center_horizontal"
                         android:textAlignment="center"
                         android:text="Split Bill"
                         android:textColor="@color/black">

                     </TextView>

                 </LinearLayout>
    </LinearLayout>
        </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_margin="10dp"
                 android:orientation="vertical"
                 >

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:layout_weightSum ="4"
                     >


                     <LinearLayout
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight ="1"
                         android:orientation="vertical">


                         <ImageView
                             android:layout_width="40dp"
                             android:layout_height="40dp"

                             android:layout_margin="5dp"
                             android:padding="10dp"
                             android:layout_gravity="center_horizontal"
                             android:background="@drawable/bg_offer_home"
                             android:src="@drawable/ic_check_balance">

                         </ImageView>

                         <TextView
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_margin="5dp"
                             android:layout_gravity="center_horizontal"
                             android:textAlignment="center"
                             android:text="Check Bank Balance"
                             android:textColor="@color/black">

                         </TextView>

                     </LinearLayout>




                     <LinearLayout
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight ="1"
                         android:orientation="vertical">


                         <ImageView
                             android:layout_width="40dp"
                             android:layout_height="40dp"

                             android:layout_margin="5dp"
                             android:padding="10dp"
                             android:layout_gravity="center_horizontal"
                             android:background="@drawable/bg_offer_home"
                             android:src="@drawable/ic_wallet_topup">

                         </ImageView>

                         <TextView
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_margin="5dp"
                             android:layout_gravity="center_horizontal"
                             android:textAlignment="center"
                             android:text="Wallet"
                             android:textColor="@color/black">

                         </TextView>

                     </LinearLayout>


                     <LinearLayout
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight ="1"
                         android:orientation="vertical">


                         <ImageView
                             android:layout_width="40dp"
                             android:layout_height="40dp"

                             android:layout_margin="5dp"
                             android:padding="10dp"
                             android:layout_gravity="center_horizontal"
                             android:background="@drawable/bg_offer_home"
                             android:src="@drawable/ic_add_reminders">

                         </ImageView>

                         <TextView
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_margin="5dp"
                             android:layout_gravity="center_horizontal"
                             android:textAlignment="center"
                             android:text="Add Reminders"
                             android:textColor="@color/black">

                         </TextView>


                     </LinearLayout>






                     <LinearLayout
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight ="1"
                         android:orientation="vertical">


                         <ImageView
                             android:layout_width="40dp"
                             android:layout_height="40dp"

                             android:layout_margin="5dp"
                             android:padding="10dp"
                             android:layout_gravity="center_horizontal"
                             android:background="@drawable/bg_offer_home"
                             android:src="@drawable/ic_request_money">

                         </ImageView>

                         <TextView
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_margin="5dp"
                             android:layout_gravity="center_horizontal"
                             android:textAlignment="center"
                             android:text="Request Money"
                             android:textColor="@color/black">

                         </TextView>

                     </LinearLayout>
                 </LinearLayout>
             </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/grey_300"
            >

        </View>
        <RelativeLayout
            android:id="@+id/view_pager1"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            >
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </androidx.viewpager.widget.ViewPager>
            
            <LinearLayout
                android:id="@+id/ln_points_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_pager_home"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/grey_300"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:text="Recharge and Bills"

            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/mobile_recharge_ln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:id="@+id/mobile_ln"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_mobile_green"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_horizontal"
                        android:text="Mobile"
                        android:textAlignment="center"
                        android:textColor="@color/black"/>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/electricity_ln"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_lightbulb_green"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_horizontal"
                        android:text="Electricity"
                        android:textAlignment="center"
                        android:textColor="@color/black"/>


                </LinearLayout>



                <LinearLayout
                    android:id="@+id/cards_ln"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_payment_green"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_horizontal"
                        android:text="Credit Card"
                        android:textAlignment="center"
                        android:textColor="@color/black"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/broadband_ln"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_router_green"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_horizontal"
                        android:text="BroadBand"
                        android:textAlignment="center"
                        android:textColor="@color/black"/>


                </LinearLayout>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">


                    <LinearLayout
                        android:id="@+id/insurance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_insurance_green"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_gravity="center_horizontal"
                            android:text="Insurance"
                            android:textAlignment="center"
                            android:textColor="@color/black"/>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/water_ln"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_water_green"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_gravity="center_horizontal"
                            android:text="Water"
                            android:textAlignment="center"
                            android:textColor="@color/black"/>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            
            
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/grey_300"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:text="Buy on PhonePe"
                android:textStyle="bold"/>
            <LinearLayout
                android:id="@+id/more_optn_ln"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_gift_card_green"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_gravity="center_horizontal"
                            android:text="Gift Cards"
                            android:textColor="@color/black"
                            android:textAlignment="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_bus_green"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_gravity="center_horizontal"
                            android:text="Red Bus"
                            android:textColor="@color/black"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/grey_300"/>



        </LinearLayout>



        
    </ScrollView>






</FrameLayout>